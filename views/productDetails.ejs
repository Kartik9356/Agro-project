<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
  </head>
  <body class="bg-white font-sans text-gray-800">
    
    <%- include('partials/header') %>

    <div class="bg-gray-50 py-4 border-b border-gray-100">
      <div class="container mx-auto px-4 text-sm text-gray-500">
        <a href="/" class="hover:text-[#4CAF50]">Home</a>
        <span class="mx-2">/</span>
        <a href="/shop" class="hover:text-[#4CAF50]">Shop</a>
        <span class="mx-2">/</span>
        <span class="text-gray-800 font-semibold"><%= product.name %></span>
      </div>
    </div>

    <section class="py-12">
      <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row gap-12">
          
          <div class="md:w-1/2">
            <div
              class="bg-[#F9F9F9] rounded-2xl overflow-hidden mb-4 border border-gray-100 relative group"
            >
              <img
                src="<%= product.image %>"
                alt="<%= product.name %>"
                class="w-full h-[500px] object-contain mix-blend-multiply p-8 transition-transform duration-500 hover:scale-110"
              />
              <div
                class="absolute top-4 right-4 bg-white p-2 rounded-full shadow cursor-pointer hover:text-[#D32F2F] transition"
              >
                <i class="ph ph-magnifying-glass-plus text-xl"></i>
              </div>
            </div>
            <div class="flex gap-4">
              <div
                class="w-24 h-24 bg-[#F9F9F9] rounded-lg border border-gray-200 cursor-pointer hover:border-[#4CAF50] overflow-hidden p-2"
              >
                <img
                  src="<%= product.image %>"
                  class="w-full h-full object-contain mix-blend-multiply"
                />
              </div>
              <div
                class="w-24 h-24 bg-[#F9F9F9] rounded-lg border border-gray-200 cursor-pointer hover:border-[#4CAF50] overflow-hidden p-2 opacity-60 hover:opacity-100"
              >
                <img
                  src="<%= product.image %>"
                  class="w-full h-full object-contain mix-blend-multiply"
                />
              </div>
              <div
                class="w-24 h-24 bg-[#F9F9F9] rounded-lg border border-gray-200 cursor-pointer hover:border-[#4CAF50] overflow-hidden p-2 opacity-60 hover:opacity-100"
              >
                <img
                  src="<%= product.image %>"
                  class="w-full h-full object-contain mix-blend-multiply"
                />
              </div>
            </div>
          </div>

          <div class="md:w-1/2">
            <h1 class="text-3xl md:text-4xl font-extrabold text-gray-900 mb-4">
              <%= product.name %>
            </h1>

            <p class="text-3xl font-bold text-[#4CAF50] mb-6">
              ₹<%= product.price %>.00
            </p>

            <div class="mb-6">
              <p class="text-sm font-bold text-gray-700 mb-2">Pack Size:</p>
              <div
                class="inline-block bg-gray-100 border border-gray-200 text-gray-700 py-2 px-4 rounded font-medium"
              >
                <%= product.unit %>
              </div>
            </div>

            <div class="flex items-center gap-4 mb-8">
              <div
                class="flex items-center border border-gray-300 rounded overflow-hidden"
              >
                <button
                  id="qty-minus"
                  class="px-4 py-3 bg-gray-50 hover:bg-gray-100 text-gray-600 font-bold transition"
                >
                  -
                </button>
                <input
                  id="qty-input"
                  type="text"
                  value="1"
                  readonly
                  class="w-12 text-center py-3 outline-none font-bold text-gray-700 bg-white"
                />
                <button
                  id="qty-plus"
                  class="px-4 py-3 bg-gray-50 hover:bg-gray-100 text-gray-600 font-bold transition"
                >
                  +
                </button>
              </div>

              <button
                id="add-to-cart-main"
                class="flex-1 md:flex-none bg-[#D32F2F] hover:bg-[#B71C1C] text-white font-bold py-3 px-10 rounded shadow-lg uppercase tracking-wider transition transform active:scale-95 flex items-center gap-2 justify-center"
                data-id="<%= product.id %>"
                data-name="<%= product.name %>"
                data-price="<%= product.price %>"
                data-image="<%= product.image %>"
                data-unit="<%= product.unit %>"
              >
                <i class="ph ph-shopping-bag text-xl"></i>
                Add to Cart
              </button>
            </div>

            <div class="mb-8">
              <a
                href="#"
                class="inline-flex items-center gap-2 text-gray-500 hover:text-[#D32F2F] text-sm font-semibold transition"
              >
                <i class="ph ph-heart text-lg"></i> Add to wishlist
              </a>
            </div>

            <div
              class="border-t border-gray-100 pt-6 space-y-2 text-sm text-gray-500"
            >
              <p>
                <span class="font-bold text-gray-800">SKU:</span> <%=
                product.sku %>
              </p>
              <p>
                <span class="font-bold text-gray-800">Category:</span> <%=
                product.category %>
              </p>

              <div
                class="flex items-center gap-12 mt-4 pt-4 border-t border-dashed border-gray-200"
              >
                <span class="font-bold text-gray-800">Availability</span>
                <span class="text-[#4CAF50] font-bold">: In Stock</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="py-12 bg-white">
      <div class="container mx-auto px-4">
        <div class="border-b border-gray-200 mb-8">
          <nav class="flex gap-8" aria-label="Tabs">
            <button
              class="border-b-2 border-[#D32F2F] py-4 px-1 text-sm font-bold text-gray-900"
            >
              Description
            </button>
            <button
              class="border-b-2 border-transparent hover:border-gray-300 py-4 px-1 text-sm font-medium text-gray-500"
            >
              Additional information
            </button>
            <button
              class="border-b-2 border-transparent hover:border-gray-300 py-4 px-1 text-sm font-medium text-gray-500"
            >
              Reviews (0)
            </button>
          </nav>
        </div>

        <div class="prose max-w-none text-gray-600 leading-relaxed">
          <h3 class="text-2xl font-bold text-gray-800 mb-4">Description</h3>
          <p><%= product.description %></p>
          <p class="mt-4">
            Grown organically without the use of harmful pesticides, our <%=
            product.name %> is carefully handpicked to ensure you get only the
            best quality produce.
          </p>
        </div>
      </div>
    </section>

    <section class="py-16 bg-gray-50 border-t border-gray-100">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-extrabold text-gray-900 mb-10">
          Related Products
        </h2>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-8">
          <% relatedProducts.forEach(related => { %>
          <div
            class="group bg-white border border-gray-100 rounded-2xl p-4 hover:shadow-xl transition overflow-hidden"
          >
            <div
              class="relative w-full h-48 flex items-center justify-center bg-gray-50 rounded-xl mb-4 overflow-hidden"
            >
              <a href="/product/<%= related.id %>">
                <img
                  src="<%= related.image %>"
                  class="h-32 object-contain group-hover:scale-110 transition duration-500 mix-blend-multiply"
                />
              </a>
              <div
                class="absolute bottom-2 right-2 translate-y-full group-hover:translate-y-0 transition duration-300"
              >
                <button
                  class="add-to-cart-btn bg-[#4CAF50] text-white p-2 rounded-full shadow hover:bg-[#388E3C]"
                  data-id="<%= related.id %>"
                  data-name="<%= related.name %>"
                  data-price="<%= related.price %>"
                  data-image="<%= related.image %>"
                  data-unit="<%= related.unit %>"
                >
                  <i class="ph ph-shopping-bag"></i>
                </button>
              </div>
            </div>
            <h3 class="font-bold text-gray-800 truncate">
              <a href="/product/<%= related.id %>"><%= related.name %></a>
            </h3>
            <div class="flex justify-between items-center mt-2">
              <span class="font-bold text-[#2E7D32]">₹<%= related.price %></span>
              <div class="flex text-yellow-400 text-xs gap-0.5">
                <i class="ph-fill ph-star"></i><i class="ph-fill ph-star"></i
                ><i class="ph-fill ph-star"></i><i class="ph-fill ph-star"></i>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </section>

    <%- include('partials/footer') %>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const qtyInput = document.getElementById("qty-input");
        const minusBtn = document.getElementById("qty-minus");
        const plusBtn = document.getElementById("qty-plus");
        const mainAddBtn = document.getElementById("add-to-cart-main");

        // 1. Handle Plus / Minus Logic
        plusBtn.addEventListener("click", () => {
          let val = parseInt(qtyInput.value);
          qtyInput.value = val + 1;
        });

        minusBtn.addEventListener("click", () => {
          let val = parseInt(qtyInput.value);
          if (val > 1) {
            qtyInput.value = val - 1;
          }
        });

        // 2. Handle "Add to Cart" with Custom Quantity
        mainAddBtn.addEventListener("click", function () {
          // Get basic details from data attributes
          const product = {
            id: this.dataset.id,
            name: this.dataset.name,
            price: parseFloat(this.dataset.price),
            image: this.dataset.image,
            unit: this.dataset.unit,
            quantity: parseInt(qtyInput.value) || 1, // Use input value!
          };

          // Use the global addToCart function (from header.ejs)
          addToCart(product);

          // Visual Feedback
          const originalContent = this.innerHTML;
          this.innerHTML = '<i class="ph-fill ph-check-circle"></i> Added!';
          this.classList.remove("bg-[#D32F2F]", "hover:bg-[#B71C1C]");
          this.classList.add("bg-gray-800");

          setTimeout(() => {
            this.innerHTML = originalContent;
            this.classList.remove("bg-gray-800");
            this.classList.add("bg-[#D32F2F]", "hover:bg-[#B71C1C]");
          }, 1000);
        });
      });
    </script>
  </body>
</html>